<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Button x:Key="RoundButton">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" 
                            Value="50"/>
                </Style>
            </Button.Resources>
        </Button>
    </Window.Resources>


    <Grid>
        <Button 
            Name="BusLines"
            Width="100"
                Height="100"
                Click="BusLines_OnClick">

        </Button>

        <Button
            Name="ShowBusesList"
            Height="100"
            Width="100"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0,0,20,20"
            Click="ShowBusesList_OnClick">

            <TextBlock
                Text="Show Buses list"
                FontSize="10"
            />

            <Button.Resources>

                <Style TargetType="Border">

                    <Setter 
                        Property="CornerRadius" 
                        Value="50"
                    />

                </Style>

            </Button.Resources>

            <Button.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Color="DarkGray"
                    ShadowDepth="1"
                />
            </Button.Effect>

            <Button.Background>

                <RadialGradientBrush>
                    <GradientStop Color="MediumTurquoise"/>
                </RadialGradientBrush>

            </Button.Background>

        </Button>

    </Grid>
</Window>
