<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="None"
        Height="750"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"

        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"

        Icon="Icons/bus_white.png"
        >

    <Window.Resources>

        <Storyboard x:Key="OpenMenu">

            <ThicknessAnimation
                Storyboard.TargetProperty="Margin" 
                From="-210,0,0,0" 
                To="0,0,0,0" 
                DecelerationRatio="0.9" 
                Duration="0:0:0.3"/>

        </Storyboard>

        <Storyboard x:Key="CloseMenu">

            <ThicknessAnimation 
                Storyboard.TargetProperty="Margin" 
                From="0,0,0,0" 
                To="-210,0,0,0" 
                DecelerationRatio="0.9" 
                Duration="0:0:0.3"/>

        </Storyboard>

    </Window.Resources>


    <Grid
        Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Frame
            x:Name="DataDisplay"
            Grid.Column="1"
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="10"
            NavigationUIVisibility="Hidden"
        />

        <Border
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="0"
            Background="#4DA1E3"
            Width="1920"
            Height="50"
            VerticalAlignment="Top"
            MouseDown="UIElement_OnMouseDown"/>

        <!--Exit button-->
        <Border
            Grid.Column="1"
            Grid.Row="0"
            Name="Exit"
            Width="70"
            Height="50"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="#E81123"
            BorderBrush="Transparent"
            MouseEnter="Exit_OnMouseEnter"
            MouseLeave="Exit_OnMouseLeave"
            MouseDown="Exit_OnMouseDown">


            <materialDesign:PackIcon
                Kind="Close"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="White"
                Height="40"
                Width="40"
                />
            <!--<TextBlock
                Name="X"
                Text="×"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="50"
                Foreground="White"
                Margin="0,0,0,0"/>-->

        </Border>

        <!--Side panel-->
        <Grid
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="0"
            Grid.RowSpan="2"
            Name="SideBar"
            Background="#FF0064A6"
            Width="300"
            HorizontalAlignment="Left"
            >

            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>

            <!--Open close Button-->
            <Button
            Grid.Row="0"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Background="Transparent"
            Width="90"
            Height="80"
            BorderBrush="Transparent"
            Click="ButtonBase_OnClick">

                <materialDesign:PackIcon
                    Name="OpenCloseButtonIcon"
                    Foreground="White"
                    Kind="MenuOpen"
                    Height="50"
                    Width="50"
                    />

            </Button>

            <Button
                Name="BusesSidePanel"
                Grid.Row="1"
                Background="#FF0064A6"
                BorderBrush="Transparent"
                Height="120"
                Margin="0,0,0,0"
                MouseEnter="BusesSidePanel_OnMouseEnter"
                MouseLeave="BusesSidePanel_OnMouseLeave"
                Click="BusesSidePanel_OnClick">

                <StackPanel Orientation="Horizontal">

                    <TextBlock
                        Name="Buses"
                        Text="Buses"
                        FontSize="30"
                        Foreground="White"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="5,0,0,0"/>

                    <materialDesign:PackIcon
                        Foreground="White"
                        Kind="BusMultiple"
                        Height="50"
                        Width="50"
                        Margin="125,0,0,0"
                        />

                </StackPanel>

            </Button>

            <Button
                Name="StationsSidePanel"
                Grid.Row="2"
                Background="#FF0064A6"
                BorderBrush="Transparent"
                Height="120"
                Margin="0,0,0,0"
                MouseEnter="StationsSidePanel_OnMouseEnter"
                MouseLeave="StationsSidePanel_OnMouseLeave"
                Click="StationsSidePanel_OnClick">

                <StackPanel Orientation="Horizontal">

                    <TextBlock
                        Name="Stations"
                        Text="Stations"
                        FontSize="30"
                        Foreground="White"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="5,0,0,0"/>

                    <materialDesign:PackIcon
                        Foreground="White"
                        Kind="BusStop"
                        Height="50"
                        Width="50"
                        Margin="85,0,0,0"
                    />

                </StackPanel>

            </Button>

            <Button
                Name="LinesSidePanel"
                Grid.Row="3"
                Background="#FF0064A6"
                BorderBrush="Transparent"
                Height="120"
                Margin="0,0,0,0"
                MouseEnter="LinesSidePanel_OnMouseEnter"
                MouseLeave="LinesSidePanel_OnMouseLeave"
                Click="LinesSidePanel_OnClick">

                <StackPanel Orientation="Horizontal">

                    <TextBlock
                        Name="Lines"
                        Text="Lines"
                        FontSize="30"
                        Foreground="White"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="5,0,0,0"/>

                    <materialDesign:PackIcon
                        Foreground="White"
                        Kind="MapMarkerDistance"
                        Height="50"
                        Width="50"
                        Margin="130,0,0,0"
                    />

                </StackPanel>

            </Button>


        </Grid>

    </Grid>

</Window>
