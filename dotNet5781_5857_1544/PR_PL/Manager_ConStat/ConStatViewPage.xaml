<Page x:Class="PL.ConStatViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConStatViewPage"
      
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal" 
      TextOptions.TextRenderingMode="Auto"        
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      >

    <Grid>

        <DataGrid
            x:Name="ConStatDataGrid"
            AutoGenerateColumns="False"
            ItemsSource="{Binding}"
            IsReadOnly="True"
            FontSize="25"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            Margin="0,0,0,100">

            <DataGrid.Columns>

                <DataGridTextColumn 
                    x:Name="FirstStat" 
                    Binding="{Binding StatCode1}"
                    Header="First"
                    />

                <DataGridTextColumn 
                    x:Name="SecondStat" 
                    Binding="{Binding StatCode2}"
                    Header="Second"
                />

                <DataGridTextColumn 
                    x:Name="Distance" 
                    Binding="{Binding Distance}"
                    Header="Distance"
                />

                <DataGridTextColumn 
                    x:Name="AvgTime" 
                    Header="Time">

                    <DataGridTextColumn.Binding>

                        <Binding Path="AverageTravelTime"
                                 StringFormat="m\:ss"/>

                    </DataGridTextColumn.Binding>

                </DataGridTextColumn>

            </DataGrid.Columns>

        </DataGrid>

        <Button 
            x:Name="UpdateTime"
            Width="100"
            Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
            Height="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Click="Update_OnClick"
        >
            <materialDesign:PackIcon
                Width="50"
                Height="50"
                Kind="Update"
            />
        </Button>
        

        <StackPanel
            Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
            >

            <TextBox
                    Name="SearchLinesTextBox"
                    TextChanged="SearchLinesTextBox_OnTextChanged"
                    Height="50"
                    Width="230"
                    FontSize="15"
                    Margin="0,-6,0,0"
                    materialDesign:HintAssist.Hint="Search Station by code"  
                    materialDesign:HintAssist.IsFloating="True"
                />

            <materialDesign:PackIcon
                    Kind="Search"
                    Height="40"
                    Width="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Opacity="0.9"
                    Margin="0,0,10,0"
                    Foreground="#0069C0"
                    />
        </StackPanel>
    </Grid>

</Page>
