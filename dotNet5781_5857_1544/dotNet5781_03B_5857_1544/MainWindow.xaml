<Window x:Class="dotNet5781_03B_5857_1544.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowState="Maximized"
        WindowStyle="None"
        >

    <Window.Resources>
        <LinearGradientBrush x:Key="PressedBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="White" Offset="0.0"/>
                    <GradientStop Color="White" Offset="0.1"/>
                    <GradientStop Color="White" Offset="0.9"/>
                    <GradientStop Color="White" Offset="1.0"/>
                </GradientStopCollection>
            </GradientBrush.GradientStops>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="SolidBorderBrush" Color="#888" />
        <LinearGradientBrush x:Key="DarkBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="LightGreen" Offset="0.0"/>
                    <GradientStop Color="Green" Offset="1.0"/>
                </GradientStopCollection>
            </GradientBrush.GradientStops>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="NormalBorderBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="White" Offset="0.0"/>
                    <GradientStop Color="White" Offset="1.0"/>
                </GradientStopCollection>
            </GradientBrush.GradientStops>
        </LinearGradientBrush>
        <Style x:Key="{x:Type ProgressBar}" TargetType="{x:Type ProgressBar}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ProgressBar}">
                        <Grid>
                            <Border Name="PART_Track" CornerRadius="0,5,5,0" Background="{StaticResource PressedBrush}" BorderBrush="{StaticResource SolidBorderBrush}" BorderThickness="0.5" />
                            <Border Name="PART_Indicator" CornerRadius="0,5,5,0" Background="{StaticResource DarkBrush}" BorderBrush="Transparent"  BorderThickness="2,2,2,2" HorizontalAlignment="Left" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="750*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="Buttons"
              Grid.Column="0"
              Grid.Row="0"
        >

            <Grid.Background>

                <LinearGradientBrush
                    EndPoint="0.5,1"
                    MappingMode="RelativeToBoundingBox"
                    StartPoint="0.5,0">

                    <GradientStop Color="#AA01A77C" 
                                  Offset="0.987"/>

                    <GradientStop Color="#AA30A4B8"/>

                </LinearGradientBrush>

            </Grid.Background>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.7*"/>
                <ColumnDefinition Width="0.4*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BusLineNum"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Grid.Column="0"
                    Click="Sort_by_ID">

                <StackPanel
                    Orientation="Horizontal"
                    >

                    <Label 
                        Content="ID  "
                        FontSize="28"
                        FontWeight="DemiBold"
                        />

                    <Image
                        Source="https://img.icons8.com/metro/250/generic-sorting-2.png"
                        Height="25"
                        />

                </StackPanel>

                <Button.Background>

                    <LinearGradientBrush
                        EndPoint="0.5,1"
                        MappingMode="RelativeToBoundingBox"
                        StartPoint="0.5,0">

                        <GradientStop Color="#AA01A77C" 
                                      Offset="0.987"/>

                        <GradientStop Color="#AA30A4B8"/>

                    </LinearGradientBrush>

                </Button.Background>

            </Button>

            <Button x:Name="Fuel"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Grid.Column="1"
                    Click="Sort_by_fuel_Amount">

                <StackPanel
                    Orientation="Horizontal"
                    >

                    <Label
                    FontSize="25"
                    Content="Fuel  "
                    FontWeight="DemiBold"
                    />

                    <Image
                        Source="https://img.icons8.com/metro/250/generic-sorting.png"
                        Height="25"
                    />

                </StackPanel>

                <Button.Background>

                    <LinearGradientBrush
                        EndPoint="0.5,1"
                        MappingMode="RelativeToBoundingBox"
                        StartPoint="0.5,0">

                        <GradientStop Color="#AA01A77C" 
                                      Offset="0.987"/>

                        <GradientStop Color="#AA30A4B8"/>

                    </LinearGradientBrush>

                </Button.Background>

            </Button>

            <Button x:Name="Status"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Grid.Column="2"
                    Click="Sort_by_status"
            >

                <StackPanel
                    Orientation="Horizontal"
                    >

                    <Label
                        Content="Status  "
                        FontSize="25"
                        FontWeight="DemiBold"
                        />

                    <Image
                        Source="https://img.icons8.com/metro/250/generic-sorting.png"
                        Height="25"
                    />

                </StackPanel>

                <Button.Background>

                    <LinearGradientBrush
                        EndPoint="0.5,1"
                        MappingMode="RelativeToBoundingBox"
                        StartPoint="0.5,0">

                        <GradientStop Color="#AA01A77C" 
                                      Offset="0.987"/>

                        <GradientStop Color="#AA30A4B8"/>

                    </LinearGradientBrush>

                </Button.Background>

            </Button>

            <Label 
                Grid.Column="3"
                Content="Ron Keinan 203735857&#xA;    Amihay Hassan 206291544" 
                HorizontalContentAlignment="Center"
                HorizontalAlignment="Stretch"
                VerticalContentAlignment="Center"
                VerticalAlignment="Stretch"
                FontSize="20"
                FontFamily="Consolas"
            >

                <Label.Background>

                    <LinearGradientBrush
                        EndPoint="0.5,1"
                        MappingMode="RelativeToBoundingBox"
                        StartPoint="0.5,0">

                        <GradientStop Color="#AA01A77C" 
                                      Offset="0.987"/>

                        <GradientStop Color="#AA30A4B8"/>

                    </LinearGradientBrush>

                </Label.Background>

            </Label>


            <Button
             Grid.Column="4"
             VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch"
             Click="EXIT_OnClick">

                <Image Source="https://img.icons8.com/carbon-copy/344/exit.png">
                    <Image.OpacityMask>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Image.OpacityMask>
                </Image>

                <Button.Resources>

                    <Style TargetType="Border">

                        <Setter 
                                Property="CornerRadius" 
                                Value="10"
                            />

                    </Style>

                </Button.Resources>

                <Button.Effect>
                    <DropShadowEffect
                            BlurRadius="15"
                            Color="Gray"
                            ShadowDepth="1"
                        />
                </Button.Effect>

            </Button>

        </Grid>

        <Grid
            Name="BusesGrid"
            Grid.Row="1"
            >

            <ListBox
            Name="LbBuses"
            HorizontalAlignment="Stretch"  
            VerticalAlignment="Top"
            MouseDoubleClick="LbBuses_MouseDoubleClick"
            >

                <!--<ListBox.ItemContainerStyle>

                    <Style TargetType="ListBoxItem">

                        <Style.Triggers>

                            <DataTrigger
                                
                                Binding="{Binding Path=BUSSTATE}"
