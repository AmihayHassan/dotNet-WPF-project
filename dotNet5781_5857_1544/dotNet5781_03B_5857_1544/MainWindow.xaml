<Window x:Class="dotNet5781_03B_5857_1544.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03B_5857_1544"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="725">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="600*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="Buttons"
              Grid.Column="0"
              Grid.Row="0" 
        >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BusLineNum"
                    Content="ID"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Grid.Column="0"
                    Click="Sort_by_ID"
            />

            <Button x:Name="MileageFromLastMaintenance"
                    Content="   mileage from&#xa;last maintenance"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Grid.Column="1"
                    Click="Sort_by_last_maint"
            />

            <Button x:Name="Fuel"
                    Content="Fuel"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Grid.Column="2"
                    Click="Sort_by_fuel_Amount"
            />

            <Button x:Name="TotalMileage"
                    Content="Mileage"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Grid.Column="3"
                    Click="Sort_by_Mileage"
            />

            <Button x:Name="LastMaintenance"
                    Content="Last Maintenance"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Grid.Column="4"
                    Click="Sort_by_last_Maintenance"
            />

            <Button x:Name="Status"
                    Content="Status"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Grid.Column="5"
                    Click="Sort_by_status"
            />

            <Button x:Name="Add"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Click="Add_Bus_to_Eged"
                Grid.Column="7"
                >
                <Image Source="https://img.icons8.com/pastel-glyph/344/plus--v1.png"/>
            </Button>

        </Grid>

        <Grid
            Name="BusesGrid"
            Grid.Row="1"
            >

            <ListBox
            Name="LbBuses"
            HorizontalAlignment="Stretch"  
            VerticalAlignment="Top"
                MouseDoubleClick="LbBuses_MouseDoubleClick"   
            >
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding BUSSTATESTR}" Value="Ready">
                                <Setter Property="Foreground" Value="LightGreen"></Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding BUSSTATESTR}" Value="inMaintenance">
                                <Setter Property="Foreground" Value="Red"></Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding BUSSTATESTR}" Value="reFueling">
                                <Setter Property="Foreground" Value="Red"></Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding BUSSTATESTR}" Value="During">
                                <Setter Property="Foreground" Value="Yellow"></Setter>
                            </DataTrigger>
                            
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    
                    <DataTemplate>

                        <Grid Name ="BusDetails"
                              Width="677"
                              Height="40"
                        >

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="0.5*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Name ="ID"
                                Grid.Column="0"
                                Text="{Binding Path=LICENSENUMSTR }"
                                FontWeight="Bold"
                                FontSize="12"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                />

                            <TextBlock
                                Name ="mileage"
                                Grid.Column="1"
                                Text="{Binding Path=MILAGESINCELASTMAINTSTR}"
                                FontWeight="Bold"
                                FontSize="12"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                            />

                            <TextBlock
                                Name ="Fuel"
                                Grid.Column="2"
                                Text="{Binding Path=FUELTSTR}"
                                FontWeight="Bold"
                                FontSize="12"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                            />

                            <TextBlock
                                Name ="Mileage"
                                Grid.Column="3"
                                Text="{Binding Path=MILEAGESTR}"
                                FontWeight="Bold"
                                FontSize="12"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                            />

                            <TextBlock
                                Name ="LastMaintenance"
                                Grid.Column="4"
                                Text="{Binding Path=LASTMAINTDATESTR}"
                                FontWeight="Bold"
                                FontSize="12"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                            />

                            <TextBlock
                                Name ="Status"
                                Grid.Column="5"
                                Text="{Binding Path=BUSSTATESTR}"
                                FontWeight="Bold"
                                FontSize="12"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                            />
                            <Button
                                Grid.Column="6"
                                Name="Refuel"
                                Click="Refuel"
                                FontSize="12">
                                <Viewbox>
                                    <Image Source="https://img.icons8.com/dotty/344/gas-pump.png"/>
                                </Viewbox>
                            </Button>

                            <Button
                                Grid.Column="7"
                                Name="Maintain"
                                Click="Maintain" 
                                FontSize="12">
                                <Viewbox>
                                    <Image Source="https://img.icons8.com/wired/344/gear.png"/>
                                </Viewbox>
                            </Button>

                            <Button Name="ChooseBusForARide"
                                Grid.Column="8"
                                Click="ButtonBase_OnClick"
                                >
                                <Viewbox>
                                    <Image Source="C:\Users\ronke\source\repos\dotNet5781_5857_1544\dotNet5781_5857_1544\bus.png"/>
                                </Viewbox>
                            </Button>

                        </Grid>

                    </DataTemplate>

                </ListBox.ItemTemplate>

            </ListBox>

            

        </Grid>

    </Grid>

</Window>
