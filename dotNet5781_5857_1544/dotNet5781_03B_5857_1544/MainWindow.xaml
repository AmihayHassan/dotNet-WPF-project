<Window x:Class="dotNet5781_03B_5857_1544.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowState="Maximized"
        WindowStyle="None"
        >

    <Window.Resources>
        <LinearGradientBrush x:Key="PressedBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="White" Offset="0.0"/>
                    <GradientStop Color="White" Offset="0.1"/>
                    <GradientStop Color="White" Offset="0.9"/>
                    <GradientStop Color="White" Offset="1.0"/>
                </GradientStopCollection>
            </GradientBrush.GradientStops>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="SolidBorderBrush" Color="#888" />
        <LinearGradientBrush x:Key="DarkBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="LightGreen" Offset="0.0"/>
                    <GradientStop Color="Green" Offset="1.0"/>
                </GradientStopCollection>
            </GradientBrush.GradientStops>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="NormalBorderBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="White" Offset="0.0"/>
                    <GradientStop Color="White" Offset="1.0"/>
                </GradientStopCollection>
            </GradientBrush.GradientStops>
        </LinearGradientBrush>
        <Style x:Key="{x:Type ProgressBar}" TargetType="{x:Type ProgressBar}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ProgressBar}">
                        <Grid>
                            <Border Name="PART_Track" CornerRadius="5" Background="{StaticResource PressedBrush}" BorderBrush="{StaticResource SolidBorderBrush}" BorderThickness="0.5" />
                            <Border Name="PART_Indicator" CornerRadius="5" Background="{StaticResource DarkBrush}" BorderBrush="Transparent"  BorderThickness="2,2,2,2" HorizontalAlignment="Left" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="750*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="Buttons"
              Grid.Column="0"
              Grid.Row="0" 
        >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.6*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BusLineNum"
                    Content="ID"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Grid.Column="0"
                    Click="Sort_by_ID"
            />

            <Button x:Name="Fuel"
                    Content="Fuel"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Grid.Column="1"
                    Click="Sort_by_fuel_Amount"
            />

            <Button x:Name="Status"
                    Content="Status"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Grid.Column="2"
                    Click="Sort_by_status"
            />

            <Button
                Grid.Column="4"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"

                Click="EXIT_OnClick"
            >

                <Image Source="https://img.icons8.com/carbon-copy/344/exit.png"/>

                <Button.Resources>

                    <Style TargetType="Border">

                        <Setter 
                            Property="CornerRadius" 
                            Value="10"
                        />

                    </Style>

                </Button.Resources>

                <Button.Effect>
                    <DropShadowEffect
                        BlurRadius="15"
                        Color="Gray"
                        ShadowDepth="1"
                    />
                </Button.Effect>

            </Button>

        </Grid>

        <Grid
            Name="BusesGrid"
            Grid.Row="1"
            >

            <ListBox
            Name="LbBuses"
            HorizontalAlignment="Stretch"  
            VerticalAlignment="Top"
            MouseDoubleClick="LbBuses_MouseDoubleClick"
            >

                <ListBox.ItemContainerStyle>

                    <Style TargetType="ListBoxItem">

                        <Style.Triggers>

                            <DataTrigger
                                
                                Binding="{Binding BUSSTATE}"
                                Value="Ready">

                                <Setter
                                    Property="Background"
                                    Value="LightGreen"/>


                            </DataTrigger>

                            <DataTrigger

                                Binding="{Binding BUSSTATE}"
                                Value="InMaintenance">

                                <Setter 
                                    Property="Background"
                                    Value="Orange"/>

                            </DataTrigger>

                            <DataTrigger 

                                Binding="{Binding BUSSTATE}"
                                Value="Refueling">

                                <Setter
                                    Property="Background"
                                    Value="Orange"/>

                            </DataTrigger>

                            <DataTrigger 

                                Binding="{Binding BUSSTATE}"
                                Value="MaintainSoon">

                                <Setter
                                    Property="Background"
                                    Value="GreenYellow"/>
                            </DataTrigger>

                            <DataTrigger
                                Binding="{Binding BUSSTATE}" 
                                Value="During">

                                <Setter 
                                    Property="Background" 
                                    Value="Yellow"/>

                            </DataTrigger>

                            <DataTrigger 

                                Binding="{Binding BUSSTATE}" 
                                Value="Unfit">

                                <Setter
                                    Property="Background" 
                                    Value="Crimson"/>

                            </DataTrigger>

                        </Style.Triggers>

                    </Style>

                </ListBox.ItemContainerStyle>



                <ListBox.ItemTemplate>

                    <DataTemplate>

                        <Grid Name ="BusDetails"
                              Height="75"
                              Width="1500"
                              >

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Name ="ID"
                                Grid.Column="0"
                                Text="{Binding Path=LICENSENUMSTR }"
                                FontWeight="Bold"
                                FontSize="20"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                />

                            <TextBlock
                                Name ="Fuel"
                                Grid.Column="1"
                                Text="{Binding Path=Fuel}"
                                FontWeight="Bold"
                                FontSize="20"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                            />

                            <TextBlock
                                Name ="Status"
                                Grid.Column="2"
                                Text="{Binding Path=BUSSTATE}"
                                FontWeight="Bold"
                                FontSize="20"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                            />

                            <Button

                                Grid.Column="3"
                                Name="Refuel"
                                Click="Refuel"
                                FontSize="12">

                                <Viewbox>
                                    <Image Source="https://img.icons8.com/dotty/344/gas-pump.png"/>
                                </Viewbox>

                            </Button>

                            <Button Name="ChooseBusForARide"
                                Grid.Column="4"
                                Click="ButtonBase_OnClick"
                                >

                                <Viewbox
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    >

                                    <Image
                                        Source="https://icons.iconarchive.com/icons/icons8/ios7/128/Transport-Bus-2-icon.png"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        />

                                </Viewbox>

                            </Button>


                            <Grid 
                                Grid.Column="5"
                                >

                                <Grid.RowDefinitions>

                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>

                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                </Grid.ColumnDefinitions>

                                <ProgressBar
                                x:Name="pbFuel"
                                Grid.Row="0" 
                                Grid.Column="0"
                                Background="White" 
                                Minimum = "0"
                                Height="23"
                                Value="{Binding Path = Fuel, Mode = OneWay,UpdateSourceTrigger = PropertyChanged}"
                                Maximum="1200"
                                />
                                
                                <Label
                                    Content="Fuel"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                 />

                                <ProgressBar
                                x:Name="pbRide"
                                Grid.Row="1" 
                                Grid.Column="0"
                                Background="White" 
                                Height="23"
                                Minimum = "0"
                                Value="{Binding Path = RIDE, Mode = OneWay, UpdateSourceTrigger = PropertyChanged}"
                                Maximum="{Binding Path = MaxRide, Mode = OneWay, UpdateSourceTrigger = PropertyChanged}"
                                />

                                <Label
                                    Content="Ride"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                 />

                                <ProgressBar
                                x:Name="pbMileage"
                                Grid.Row="2"
                                Grid.Column="0"
                                Background="White"
                                Height="23"
                                Minimum = "0"
                                Value="{Binding Path = MileageSinceLastMaint, Mode = OneWay, UpdateSourceTrigger = PropertyChanged}"
                                Maximum="20000"
                                />

                                <Label
                                    Content="Mileage"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                 />

                            </Grid>

                        </Grid>

                    </DataTemplate>

                </ListBox.ItemTemplate>

            </ListBox>

            <Button x:Name="Add"
                    Width="75"
                    Height="75"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,15,15"
                    Click="Add_Bus_to_Eged"
            >

                <Image Source="https://img.icons8.com/pastel-glyph/344/plus--v1.png"/>

                <Button.Resources>

                    <Style TargetType="Border">

                        <Setter 
                            Property="CornerRadius" 
                            Value="50"
                        />

                    </Style>

                </Button.Resources>

                <Button.Effect>
                    <DropShadowEffect
                        BlurRadius="15"
                        Color="Gray"
                        ShadowDepth="1"
                    />
                </Button.Effect>

            </Button>

        </Grid>

    </Grid>

</Window>
